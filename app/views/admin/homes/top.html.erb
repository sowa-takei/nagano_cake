<h2>注文履歴一覧</h2>
<table class="table">
 <thead>
	 <tr>
		 <th>購入日時</th>
		 <th>購入者</th>
		 <th>注文個数</th>
		 <th>注文ステータス</th>
		 <th></th>
	 </tr>
 </thead>
 <tbody>

   <% @orders.each do |order| %>
   <% @sum = 0 %>
   <tr>
     <td><%= link_to admin_order_path(order) do %>
      <%= order.created_at.strftime("%Y/%m/%d %T") %></td>
     <td><%= order.name %><% end %></td>
     <td><% order.order_details.each do |order_detail,i| %>
         <% @sum += order_detail.amount %>
         <% end %>
         <%= @sum %>
         <% @sum = 0 %>
     </td>
     <td><%= order.status %></td>
   </tr>
   <% end %>

 </tbody>
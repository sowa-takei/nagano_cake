<h1>管理者ログイン</h1>
<%= form_with model: @admin, local: true do |f| %>
  <div class="form-group">
   <label for="mail_address">メールアドレス</label>
   <%= f.text_field :email, class:"form-control book_title" %>
  </div>

  <div class="form-group">
   <label for="password">パスワード</label>
   <%= f.text_field :password, class:"form-control book_title" %>
  </div>

  <div class="form-group">
    <%= f.submit 'ログイン',class:"btn btn-success" %>
  </div>
<% end %>
<div class="container">
 <div class="row">
  <div class="col-md-10">
   <h2><%= @customer.last_name %>
    <%= @customer.first_name %>さんの会員情報編集</h2>
   <table>
    <tbody>
    <tr>
     <th><label for="customer_id">会員ID</th>
     <td><%= @customer.id %></td>
    </tr>
    <%= form_with model: @customer,url:admin_customer_path(@customer), local:true do |f| %>
    <tr>
     <th><label for="customer_name">氏名</label></th>
     <td><%= f.text_field :last_name %>
         <%= f.text_field :first_name %>
     </td>
    </tr>
    <tr>
     <th><label for="customer_name">フリガナ</label></th>
     <td><%= f.text_field :last_name_kana %>
         <%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
     <th><label for="customer_name">郵便番号</label></th>
     <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
     <th><label for="customer_name">住所</label></th>
     <td><%= f.text_field :address,:size=>"60" %></td>
    </tr>
    <tr>
     <th><label for="customer_name">電話番号</label></th>
     <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
     <th><label for="customer_name">メールアドレス</label></th>
     <td><%= f.text_field :email %></td>
    </tr>
    <tr>
     <th><label for="customer_name">会員ステータス</label></th>
     <td><%= f.radio_button :is_active, 'true' %>
         <%= f.label :is_active, '有効', value: true %>
         <%= f.radio_button :is_active, 'false' %>
         <%= f.label :is_active, '退会', value: false %>
     </td>
    </tr>
    <tr>
     <th></th>
     <td><%= f.submit "変更を保存",class: "btn btn-sm btn-success" %></td>
    </tr>
   <% end %>
   </tbody>
   </table>
  </div>
 </div>
</div>





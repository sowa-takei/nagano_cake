<h2><%= @customer.last_name %>
    <%= @customer.first_name %>さんの会員情報編集</h2>

<div class="form-group">
 <label for="customer_id">会員ID
    <%= @customer.id %>
</div>

<%= form_with model: @customer,url:admin_customer_path(@customer), local:true do |f| %>
<div class="form-group">
 <label for="customer_name">氏名</label>
 <%= f.text_field :last_name %>
 <%= f.text_field :first_name %>
</div>

<div class="form-group">
 <label for="customer_name">フリガナ</label>
 <%= f.text_field :last_name_kana %>
 <%= f.text_field :first_name_kana %>
</div>

<div class="form-group">
 <label for="customer_name">郵便番号</label>
 <%= f.text_field :postal_code %>
</div>

<div class="form-group">
 <label for="customer_name">住所</label>
 <%= f.text_field :address %>
</div>

<div class="form-group">
 <label for="customer_name">電話番号</label>
 <%= f.text_field :telephone_number %>
</div>

<div class="form-group">
 <label for="customer_name">メールアドレス</label>
 <%= f.text_field :email %>
</div>

<div class="form-group">
 <label for="customer_name">会員ステータス</label>
  <%#= f.radio_button :is_active, true %>
  <%= f.radio_button :is_active, 'true' %>
  <%= f.label :is_active, '有効', value: true %>

  <%= f.radio_button :is_active, 'false' %>
  <%= f.label :is_active, '退会', value: false %>
  <%#= f.radio_button :is_active, false %>
</div>
<%#= f.label :receive_news, '受け取る', value: 1 %>
<%#= f.radio_button :receive_news, '1' %>

<%= f.submit "変更を保存",class: "btn btn-sm btn-success" %>




<% end %>

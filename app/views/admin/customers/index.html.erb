<h2>会員一覧</h2>
<table class="table">
 <tr>
   <th>会員ID</th>
   <th>氏名</th>
   <th>メールアドレス</th>
   <th>ステータス</th>
 </tr>
 <% @customers. each do |customer| %>
 <tr>
  <td><%= customer.id %></td>
  <td><%= link_to admin_customer_path(customer) do  %>
      <%= customer.last_name %>
      <%= customer.first_name %>
      <% end %></td>
  <td><%= customer.email %></td>
  <td><% if customer.is_active == true %>
      <span>有効</span>
      <% else %>
      <span>退会</span>
      <% end %>
      </td>
 <% end %>
 </tr>
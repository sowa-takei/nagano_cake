<h1>商品編集</h1>
<%= form_with model: @product,url:admin_product_path(@product), local:true do |f| %>
<label for="inputImage">商品画像</label>
<%= f.attachment_field :image, placeholder: "プロフィール画像" %>
<h4>商品名</h4>
 <%= f.text_field :name %>
<h4>商品説明</h4>
 <%= f.text_area :introduction %>
 <h4>ジャンル</h4>
  <%= f.collection_select(:genre_id, @genres, :id, :name) %>
<h4>税抜価格</h4>
 <%= f.text_field :price %>円
<h4>販売ステータス</h4>
<%= f.radio_button :receive_news, '1' %>
<%= f.label :receive_news, '販売中', value: 1 %>

<%= f.radio_button :receive_news, '0' %>
<%= f.label :receive_news, '販売停止中', value: 0 %>
<%= f.submit "変更を保存",class: "btn btn-sm btn-success" %>
<% end %>
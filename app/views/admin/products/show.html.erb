<div class="container">
 <h2>商品詳細</h2>
 <div class="row mt-5">
  <div class="col-md-4">


     <%= attachment_image_tag @product, :image, format: 'jpeg',size: "250x200" %>



  </div>

 <div class="col-md-8">
  <table>
   <tr>
    <th><label for="inputName">商品名</label></th>
    <td><%= @product.name %></td>
   </tr>

   <tr>
    <th><label for="inputIntoroduction">商品説明</label></th>
    <td><%= @product.introduction %></td>
   </tr>

   <tr>
    <th><label for="inputGenre">ジャンル</label></th>
    <td><%= @product.genre.name %></td>
   </tr>

   <tr>
    <th><label for="inputPrice">税抜価格</label></br>
        <label for="inputPrice">(税込価格)</label></th>
    <td><%= @product.price %>
        <%= @product.with_tax_price %>円</td>
   </tr>

   <tr>
    <th><label for="inputIs_active">販売ステータス</label></th>
    <td><% if @product.is_active == true %>
        <span style="color: green">販売中</span>
        <% else %>
        <span style="color: gray">販売停止中</span>
        <% end %></td>
   </tr>
   </table>
   <div class="form-group">
    <%= link_to "編集する",edit_admin_product_path(@product), class: "btn btn-sm btn-success" %>
   </div>
  </div>
 </div>
</div>
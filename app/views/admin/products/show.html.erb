<h2>商品詳細</h2>
<div class="container">
 <div class="row">
  <div class="col-md-4">
   <%= attachment_image_tag @product, :image, format: 'jpeg',size: "250x200" %>
  </div>
 </div>
 <div class="col-md-8">
  <label for="inputName">商品名</label>
  <%= @product.name %></br>

  <label for="inputIntoroduction">商品説明</label>
  <%= @product.introduction %></br>

  <label for="inputGenre">ジャンル</label>
  <%= @product.genre.name %></br>

  <label for="inputPrice">税抜価格</label></br>
  <label for="inputPrice">(税込価格)</label>
  <%= @product.price %>
  <%= @product.with_tax_price %>円</br>

  <label for="inputIs_active">販売ステータス</label>
  <% if @product.is_active == true %>
   <span>販売中</span>
  <% else %>
   <span>販売停止中</span>
  <% end %>

  <div class="form-group">
   <%= link_to "編集する",edit_admin_product_path(@product), class: "btn btn-sm btn-success" %>
  </div>
 </div>
</div>
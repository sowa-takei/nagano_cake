<h2>注文詳細履歴</h2>
<h3>注文情報</h3>
<h3>請求額</h3>
<div class="container">
 <div class="row">
  <div class="col-5">
   <table class="table">
    <tbody>
     <tr>
      <th scope="row">注文日</th>
      <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
　   </tr>
　   <tr>
　    <th scope="row">配送先</th>
　    <td>〒<%= @order.postal_code %></br>
　    　　<%= @order.address %></br>
　    　　<%= @order.name %></td>
　   </tr>
　   <tr>
　    <th scope="row">支払方法</th>
　    <td><%= @order.payment_method_i18n %></td>
　   </tr>
　   <tr>
　    <th scope="row">ステータス</th>
　    <td><%= @order.status %></td>
　   </tr>
　  </tbody>
　 </table>
　</div>

　 <div class="col-5">
	   <table class="table">
　   <tbody>
  　   <tr>
  　    <th scope="row">商品合計</th>
  　    <td><%=  %></td>
  　    <td><%#= @sum %></td>
  　   </tr>
  　   <tr>
  　    <th scope="row">配送料</th>
  　    <td><%= shipping_cost %></td>
  　   </tr>
  　   <tr>
  　    <th scope"row">ご請求額</th>
  　    <td><%= @order.total_payment %></td>
  　   </tr>
　   </tbody>
　  </table>
　 </div>
　 <div class="col-8">
　  <table class="table">
　   <tbody>
　    <tr>
　     <th>商品</th>
　     <th>単価(税込)</th>
　     <th>個数</th>
　     <th>小計</th>
  　   </tr>
  　   <tr>
  　    <% @orders.each do |order| %>
  　    <td><%= order.name %></td>

  　    <td><%= order.order_details.name %></td>
  　    <td><%= order.order_details. %></td>
  　    <% end %>
  　   </tr>

  　   </tr>
  　 </tbody>
  　</table>
   </div>
  </div>

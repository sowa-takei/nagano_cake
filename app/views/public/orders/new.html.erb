<h1>注文情報入力</h1>
<%= form_with model: @order,url: orders_verification_path, local: true do |f| %>
<div class="field">
  <h4>支払方法</h4>
  <%= f.radio_button :payment_method, 0 %>クレジットカード</br>

  <%= f.radio_button :payment_method, 1 %>銀行振込
</div></br>

<div class="field">
 <h4>お届け先</h4>
  <%= f.radio_button :address_type, 0 %>ご自身の住所</br>
  〒<%= current_customer.postal_code %>
  <%= current_customer.address %></br>
  <%= current_customer.last_name %>
  <%= current_customer.first_name %>
</div></br>

<div class="field">
  <%= f.radio_button :address_type, 1 %>登録済住所から選択</br>
</div></br>

<div class="field">
  <%= f.radio_button :address_type, 2 %>新しいお届け先</br>
  <%= f.label :郵便番号 %>(ハイフンなし)
  <%= f.text_field :full_name %>
</div>

<div class="field">
  <%= f.label :住所 %>
  <%= f.text_field :address %>
</div>

<div  class="field">
  <%= f.label :宛名 %>
  <%= f.text_field :name %>
</div>


  <%#= f.collection_radio_buttons :payment_method,Order.payment_methods, :first , :last %>
   <%= f.submit "確認画面へ進む",class: "btn btn-sm btn-success" %>

  <% end %>


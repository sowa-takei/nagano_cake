<div class="container">
 <div class="row">
  <div class="col-8">
   <h2>配送先登録/一覧</h2>
   <%= form_with model: @addresse,url:addresses_path,local:true do |f| %>
    <div class="form-group">
     <label for="customer_postal_code">郵便番号(ハイフンなし)</label>
     <%= f.text_field :postal_code,placeholder: "0000000" %>
    </div>
    <div class="form-group">
     <label for="customer_addres">住所</label>
     <%= f.text_field :address,:size=>"60",placeholder: "東京都渋谷区代々木神園町0-0" %>
    </div>
    <div class="form-group">
     <label for="customer_name">宛名</label>
     <%= f.text_field :name,placeholder: "麻原彰晃" %>
     <%= f.submit "新規登録",class: "btn btn-sm btn-success ml-5" %>
    <% end %>
   </div>
  </div>
 </div>

  <div class="row">
   <div class="col-8">
     <table class="table table-bordered">
      <thead class="thead-light">
     	 <tr>
     		 <th>郵便番号</th>
     		 <th>住所</th>
     		 <th>宛名</th>
     		 <th></th>
     	 </tr>
     	 <tbody>
     	  <% @addresses.each do |addresse| %>
     	  <tr>
     	   <td><%= addresse.postal_code %></td>
     	   <td><%= addresse.address %></td>
     	   <td><%= addresse.name %></td>
     	   <td><%= link_to "編集する", edit_address_path(addresse),class: "btn btn-sm btn-success" %>
     	       <%= link_to "削除する", address_path(addresse),method: :delete,class: "btn btn-sm btn-danger ml-2" %></td>
     	  </tr>
     	   <% end %>
     	 </tbody>
       </thead>
      </table>
     </div>
    </div>

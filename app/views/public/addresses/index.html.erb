<h2>配送先登録/一覧</h2>
<%= form_with model: @addresse,url:addresses_path,local:true do |f| %>
<div class="form-group">
 <label for="customer_postal_code">郵便番号(ハイフンなし)</label>
 <%= f.text_field :postal_code %>
</div>
<div class="form-group">
 <label for="customer_addres">住所</label>
 <%= f.text_field :address %>
</div>
<div class="form-group">
 <label for="customer_name">宛名</label>
 <%= f.text_field :name %>
</div>
<%= f.submit "新規登録",class: "btn btn-sm btn-success" %>
<% end %>
<div class="container">
 <div class="row">
  <div class="col-6">
    <table class="table">
     <thead>
    	 <tr>
    		 <th>郵便番号</th>
    		 <th>住所</th>
    		 <th>宛名</th>
    		 <th></th>
    	 </tr>
    	 <tbody>
    	  <% @addresses.each do |addresse| %>
    	  <tr>
    	   <td><%= addresse.postal_code %></td>
    	   <td><%= addresse.address %></td>
    	   <td><%= addresse.name %></td>
    	   <td><%= link_to "編集する", edit_address_path(@addresses),class: "btn btn-sm btn-success" %></td>
    	   <% end %>
    	  </tr>
    	 </tbody>
      </thead>
     </table>
    </div>
   </div>
  </div>
 <div class="container">
  <div class="row">
   <div class="col-md-2">
    <h4>ジャンル検索</h4>
     <% @genres.each do |genre| %>
     <%= genre.name %></br>
     <% end %>
   </div>
  </div>
  <div class="row">
   <div class="col-md-10">
    <%= form_with model: @cart_item,url:cart_items_path(@cart_item), local:true do |f| %>
    <%= attachment_image_tag @product, :image, format: 'jpeg',size: "300x200" %>
    <%= @product.name %>
    <%= f.hidden_field :product_id, :value => @product.name %>
    <%= @product.introduction %>
    <%= f.select :amount, *[1..10],include_blank: "--個数選択--" %>
    <%= f.submit "カートに入れる", class: "btn btn-sm btn-success" %>
    <% end %>
   </div>
  </div>
 </div>
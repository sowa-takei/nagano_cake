<h2>会員情報編集</h2>

<%= form_with model: @customer,url:customers_path(@customer), local:true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

<div class="form-group">
 <label for="customer_name">氏名</label>
 <%= f.text_field :last_name %>
 <%= f.text_field :first_name %>
</div>

<div class="form-group">
 <label for="customer_name_kana">カナ</label>
 <%= f.text_field :last_name_kana %>
 <%= f.text_field :first_name_kana %>
</div>

<div class="form-group">
 <label for="customer_postal_code">郵便番号</label>
 <%= f.text_field :postal_code %>
</div>

<div class="form-group">
 <label for="customer_addres">住所</label>
 <%= f.text_field :address %>
</div>

<div class="form-group">
 <label for="customer_telephome">電話番号</label>
 <%= f.text_field :telephone_number %>
</div>

<div class="form-group">
 <label for="customer_email">メールアドレス</label>
 <%= f.text_field :email %>
</div>


<%= f.submit "編集内容を保存",class: "btn btn-sm btn-success" %>

<% end %>

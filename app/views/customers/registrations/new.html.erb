<div class="container">
  <div class="row">
    <div class="col-10">
      <h2>新規会員登録</h2>
      <%= form_with model: @customer, url: customer_registration_path , id: 'new_customer', class: 'new_customer', local: true do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>
         <table>
           <tr>
             <th><%= f.label :名前%>(性)</th>
             <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder:"令和" %>
             <th>(名)</th>
             <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder:"平成" %></td>
           </tr>
           <tr>
             <th><%= f.label :フリガナ%>(セイ)</th>
             <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana",placeholder:"レイワ" %></td>
             <th>(メイ)</th>
             <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",placeholder:"ヘイセイ" %></td>
           </tr>
           <tr>
             <th><%= f.label :メールアドレス %></th>
             <td><%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@gmail.com"  %></td>
           </tr>
           <tr>
             <th><%= f.label :郵便番号 %>(ハイフンなし)</th>
             <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",placeholder:"0000000" %></td>
           </tr>
           <tr>
             <th><%= f.label :住所 %></th>
             <td> <%= f.text_field :address, autofocus: true, autocomplete: "address",:size=>"40",placeholder:"東京都大阪府名古屋"  %></td>
           </tr>
           <tr>
             <th><%= f.label :電話番号 %>(ハイフンなし)</th>
             <td><%= f.telephone_field	 :telephone_number, autofocus: true, autocomplete: "telephone_number",placeholder:"0000000" %></td>
           </tr>
           <tr>
             <th><%= f.label :パスワード %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
              </th>
             <td><%= f.password_field :password, autocomplete: "new-password" %></td>
           </tr>
           <tr>
             <th><%= f.label :パスワード %> (確認用)</th>
             <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
           </tr>
           <tr>
             <th></th>
             <td><%= f.submit "新規登録",class: "btn btn-sm btn-success" %></td>
           </tr>
         </table>
        <% end %>
        <h4>既に登録済みの方</h4>
        <%= link_to "こちら",new_customer_session_path %> からログインしてください。
      </div>
    </div>
  </div>



<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前%>(性)
    <%= f.text_field :名前, autofocus: true, autocomplete: "last_name" %>

    (名)
    <%= f.text_field :名前, autofocus: true, autocomplete: "first_name" %>

  </div>

  <div class="field">
    <%= f.label :フリガナ%>(セイ)
    <%= f.text_field :フリガナ, autofocus: true, autocomplete: "last_name_kana" %>

    (メイ)
    <%= f.text_field :フリガナ, autofocus: true, autocomplete: "first_name_kana" %>

  </div>

   <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :メールアドレス, autofocus: true, autocomplete: "email" %>
  </div>

   <div class="field">
    <%= f.label :郵便番号 %>(ハイフンなし)
    <%= f.text_field :郵便番号, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :住所, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>(ハイフンなし)
    <%= f.telephone_field	 :電話番号, autofocus: true, autocomplete: "telephone_number" %>
  </div>


  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %> (確認用)
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class: "btn btn-sm btn-success" %>
  </div>
<% end %>

<h4>既に登録済みの方</h4>
<%= link_to "こちら",new_customer_session_path %> からログインしてください。



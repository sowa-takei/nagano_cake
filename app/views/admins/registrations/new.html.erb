<h2>管理者ログイン</h2>
<div class="container">
 <div class="row">
  <div class="col-8">
   <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
   <div class="area">
    <div class="field">
     <%= f.label :メールアドレス %>
     <%= f.email_field :email, autofocus: true, autocomplete: "email",:size=>"40",placeholder:"sample@gmail.com" %>
    </div>
    <div class="field">
      <%= f.label :パスワード %>
      <%= f.password_field :password, autocomplete: "current-password",:size=>"40" %>
    </div>
    <div class="actions">
      <%= f.submit "ログイン",class:"btn btn-primary" %>
    </div>
    <% end %>
   </div>
  </div>
 </div>
</div>
